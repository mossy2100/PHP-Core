{
    "name": "galaxon/core",
    "description": "Base package containing utility classes and methods for use in other packages.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "ext-ctype": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0 || ^12.0"
    },
    "autoload": {
        "psr-4": {
            "Galaxon\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Galaxon\\Core\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "php -d xdebug.mode=coverage -r \"require 'vendor/bin/phpunit';\" -- --configuration phpunit.xml --do-not-cache-result --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
    }
}
